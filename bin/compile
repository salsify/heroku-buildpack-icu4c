#!/bin/sh -e

AWESOME_VM_BINARY="http://vulcan-salsify.herokuapp.com/output/fbc6b660-86fc-4d5f-93af-8ec8dc8252fd"
AWESOME_VM_VENDOR="vendor/icu4c"

echo "----- Installing icu4c version 50.1.2"

# vendor awesome-vm
mkdir -p $1/$AWESOME_VM_VENDOR
ls -al $1/$AWESOME_VM_VENDOR/
curl $AWESOME_VM_BINARY -o - | tar -xz -C $1/$AWESOME_VM_VENDOR -f -
ls -al $1/$AWESOME_VM_VENDOR/

indent() {
  sed -u 's/^/       /'
}

echo "-----> Hooking you up with icu4c version 50.1.2"

exit 0
